{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "A collection of records",
    "type": "object",
    "properties": {
        "courses": {
            "description": "List of records",
            "id": "courses",
            "type": "array",
            "items": {
                "type": "object",
                "$ref": "course.json"
            }
        },
        "totalRecords": {
            "type": "integer"
        },
        "required": [
            "courses",
            "totalRecords"
        ]
    }
}
